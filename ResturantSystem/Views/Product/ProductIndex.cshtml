@model List<ResturantSystem.Models.ProductTable>

@{
    ViewBag.Title = "ProductIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sn = 0;
}

<div class="background">


    <div class="text-right">
        <a href="@Url.Action("ProductIndex","Product")" type="button" class="btn btn-primary mt-4 mr-4"> +  Add Product</a>
    </div>

    <!-- /.row -->
    <div class="row">
        <div class="col-12">
            <div class="card mt-4">
                <div class="card-header">
                    <h4 class="card-title ">Product List</h4>

                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">

                        </div>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">

                        <tr>
                            <th>SN</th>
                            <th>ProductName</th>
                            <th>FoodCategory</th>
                            <th>ProductDetail</th>
                            <th>ProductPrice</th>
                            <th>ProductImage</th>
                            <th>Action</th>

                        </tr>

                        @foreach (var data in Model)
                        {
                            <tr>
                                <td>@(++sn)</td>
                                <td>@(data.ProductName)  </td>
                                <td>@(data.FoodCategory)  </td>
                                <td>@(data.ProductDetail)  </td>
                                <td>@(data.ProductPrice)  </td>
                                <td>@(data.ProductImage)  </td>




                            </tr>
                        }
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>

</div>
